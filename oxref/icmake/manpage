#define MANPAGE "../../tmp/man/oxref.1"
#define MANHTML "../../tmp/manhtml/oxrefman.html"

void manpage()
{
    md("tmp/man tmp/manhtml");

    special();

    chdir("documentation/man");

    if ("oxref.yo" younger MANPAGE || "release.yo" younger MANPAGE)
    {
        run("yodl2man  -o " MANPAGE " oxref");
        run("yodl2html  -o " MANHTML " oxref");
    }
    exit(0);
}
